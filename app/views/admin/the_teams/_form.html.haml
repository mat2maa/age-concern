= simple_form_for [:admin, @the_team] do |f|
  = f.error_notification

  .form-inputs
    = f.input :trustees_text, input_html: { class: 'form-control full-width summernote' }
    %br
    = f.input :staff_text, input_html: { class: 'form-control full-width summernote' }
    %br
    = f.input :volunteers_text, input_html: { class: 'form-control full-width summernote' }
    %br

  .form-actions
    = f.button :submit, class: 'form-control full-width btn btn-default'
