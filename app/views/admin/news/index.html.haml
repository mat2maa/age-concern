.row
  - if @news.count == 0
    .col-xs-4
      .well.well-lg
        There is currently no news.
        %br
        Please create some
        = link_to 'here', new_admin_news_path

  - else
    .col-xs-12
      .well.well-lg
        %h3 News
        %table.table
          %tr
            %th Title
            %th Subtitle
            %th Post text
            %th Start date
            %th End date
            %th
            %th
            %th

          - @news.each do |news|
            %tr
              %td= news.title
              %td= news.subtitle
              %td= news.post_text
              %td= news.start_date
              %td= news.end_date
              %td= link_to 'Show', admin_news_path(news)
              %td= link_to 'Edit', edit_admin_news_path(news)
              %td= link_to 'Destroy', admin_news_path(news), :method => :delete, :data => { :confirm => 'Are you sure?' }
        %br
        = link_to 'New News', new_admin_news_path

