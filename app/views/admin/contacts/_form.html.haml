= simple_form_for [:admin, @contact] do |f|
  = f.error_notification

  .form-inputs
    = f.input :text, input_html: { class: 'full-width' }
    = f.input :first_name, input_html: { class: 'full-width' }
    = f.input :surname, input_html: { class: 'full-width' }
    = f.input :type, input_html: { class: 'full-width' }
    = f.input :address_line_1, input_html: { class: 'full-width' }
    = f.input :address_line_2, input_html: { class: 'full-width' }
    = f.input :town, input_html: { class: 'full-width' }
    = f.input :postcode, input_html: { class: 'full-width' }
    = f.input :county, input_html: { class: 'full-width' }
    = f.input :tel, input_html: { class: 'full-width' }
    = f.input :email_1, input_html: { class: 'full-width' }
    = f.input :email_2, input_html: { class: 'full-width' }
    = f.input :longitude, input_html: { class: 'full-width' }
    = f.input :latitude, input_html: { class: 'full-width' }

  .form-actions
    = f.button :submit, class: 'full-width btn btn-default'
